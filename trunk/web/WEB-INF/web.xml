                        <param-value>/WEB-INF/toolbox.xml</param-value> 
                </init-param> 
        <load-on-startup>10</load-on-startup>
        
    </servlet>  
  
  
    <!-- Map *.vm files to Velocity -->  
    <servlet-mapping>  
        <servlet-name>sitemesh-velocity</servlet-name>  
        <url-pattern>*.html</url-pattern>  
    </servlet-mapping>  
	
