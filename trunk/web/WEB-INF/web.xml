   </param-value>
  </init-param>

  <!-- 设置字体大小 -->
  <init-param>
   <param-name>cap.font.size</param-name>
   <param-value>40</param-value>
  </init-param>

  <!-- 设置图片字体色 -->
  <init-param>
   <param-name>cap.font.color</param-name>
   <param-value>white</param-value>
  </init-param>
  
